<p><label>{{localize 'DataInspector.Path'}}</label>:<br><span class='path'>{{path}}</span></p>
<p><label>{{localize 'DataInspector.Type'}}</label>: <span class='type'>{{type}}</span>{{#if dd.isModel}} [DataModel]{{/if}}</p>
{{#if documentId}}
<p><label>{{localize 'DataInspector.DocumentID'}}</label>: <span class='document-id'>{{documentId}}</span></p>
{{/if}}
{{#if isContainer}}
<p><label>{{localize 'DataInspector.ChildCount'}}</label>: <span class='children'>{{children}}</span></p>
{{/if}}
{{#if isString}}
<p><label>{{localize 'DataInspector.StringLength'}}</label>: <span class='length'>{{length}}</span></p>
{{/if}}
<div class='in-data'>
	{{#each inData}}
	{{#if show}}
	<div class='data-source {{@key}}'>
		<label class='header'>{{localize label}}</label>
		<span class='value'>{{#if present}}<i class="fa-solid fa-check"></i>{{else}}<i class="fa-solid fa-xmark"></i>{{/if}}</span>
	</div>
	{{/if}}
	{{/each}}
</div>
